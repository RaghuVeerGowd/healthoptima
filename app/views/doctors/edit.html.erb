<h1>Editing Doctor Details</h1>
<% if flash[:error] %>
    <div class="error"><%= flash[:error] %></div>
<% end %>

<%= form_for @doctor  do |f| %>
  <p>
    <%= f.label :doctor_name%><br>
    <%= f.text_field :doctor_name %>
  <p>
    <%= f.label :expertise%><br>
    <%= f.text_field :expertise %>
  </p>
  <p>
    <%= f.label :experience %><br>
    <%= f.date_field :experience %>
  </p>

  <p>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </p>

  <p> 
    <%= f.label :gender %><br>
    <%= f.radio_button 'gender','male' %>male
    <%=f.radio_button 'gender','female'%>female
  </p>
  
  <p>
    <%= f.submit %>
  </p>

<% end %>